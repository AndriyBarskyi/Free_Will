<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapActivity"
    android:foreground="@drawable/popup_foreground" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="@+id/button5"
        app:layout_constraintTop_toBottomOf="@+id/button5">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/findDirectionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity='end|bottom'
            android:backgroundTint="@color/dark_blue"
            android:clickable="true"
            android:contentDescription="@android:string/search_go"
            android:focusable="true"
            android:onClick="onClickOpenPopUp"
            android:scaleType="center"
            android:src="@drawable/ic_directions_fab"
            app:fabSize="auto"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.848"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.948"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/imageView16"
            android:layout_width="394dp"
            android:layout_height="826dp"
            app:srcCompat="@drawable/ourrrmap"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="5dp" />

        <Button
            android:id="@+id/button3"
            style="@style/Widget.MaterialComponents.TimePicker.Button"
            android:layout_width="88dp"
            android:layout_height="69dp"
            android:onClick="aud237"
            app:layout_constraintBottom_toTopOf="@+id/button6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <Button
            android:id="@+id/button6"
            style="@style/Widget.MaterialComponents.TimePicker.Button"
            android:layout_width="87dp"
            android:layout_height="46dp"
            android:onClick="aud238"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.003"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.454" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView

        android:id="@+id/navView"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:menu="@menu/nav_menu"
        app:itemVerticalPadding="@dimen/item_vertical_margin"
        app:itemHorizontalPadding="@dimen/activity_horizontal_margin"
        android:background="@drawable/nav_background"
        app:itemIconSize="80dp">
    </com.google.android.material.navigation.NavigationView>


</androidx.drawerlayout.widget.DrawerLayout>